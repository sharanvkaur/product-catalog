<nav class="navbar navbar-default">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="/">sephora</a>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">

        <% @categories.order('id ASC').each do |category| %>

        <li class="dropdown">
          <a href="/categories/<%= category.id %>" role="button" aria-haspopup="true" aria-expanded="false"><%= category.name %></a>


          <ul class="dropdown-menu">

            <% @sub_categories.each do |sub_cat| %>
              <% if sub_cat.category_id == category.id %>
              <li><a href="/categories/<%= category.id %>/sub_categories/<%= sub_cat.id %>"><%= sub_cat.name %></a></li>

              <% @sub_sub_categories.each do |sub_sub_cat| %>
              <% if sub_sub_cat.sub_category_id == sub_cat.id %>
                <li><a href="/categories/<%= category.id %>/sub_categories/<%= sub_cat.id %>/sub_sub_categories/<%= sub_sub_cat.id %>">> <%= sub_sub_cat.name %></a></li>
              <% end %>
              <% end %>

            <% end %>
            <% end %>
          </ul>
        </li>
        <% end %>

      </ul>

      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to 'Admin', admin_root_path %></li>
      </ul>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>
