<%= render 'admin/main/header' %>

<div class="form-container" style="width: 60%">
  <h1>Edit Product</h1>

  <%= form_for @product, url: admin_product_path(params[:id]) do |f| %>


    <div class="form-group">
    	<%= f.label :name %>
    	<%= f.text_field :name, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :price %>
      <%= f.number_field :price, value: number_with_precision(f.object.price, precision: 2), class: "form-control" %>
    </div>
    <div class="form-group">
    	<%= f.label :description %>
    	<%= f.text_area :description, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :sub_sub_category_id %>
      <%= f.collection_select(:sub_sub_category_id, SubSubCategory.all, :id, :name)%>

    </div>

    <div class="form-group">
    	<%= f.submit :class => "btn btn-default"%>
    </div>


  <% end %>

  <br><br>

  <%= link_to 'Back to Product', admin_product_path %>
  <br>
  <%= link_to 'Back to All Products', admin_root_path %>

</div>
