<%= render 'admin/main/header' %>

<div class="form-container" style="width: 60%">
  <h1>New SubCategory in <%= @category.name %></h1>

  <%= form_for @sub_category, url: admin_category_sub_categories_path(params[:category_id]) do |f| %>


    <div class="form-group">
    	<%= f.label :name %>
    	<%= f.text_field :name, class: "form-control" %>
    </div>

    <div class="form-group">
    	<%= f.hidden_field :category_id, class: "form-control", value: @category.id %>
    </div>

    <div class="form-group">
    	<%= f.submit :class => "btn btn-default"%>
    </div>


  <% end %>

  <br><br>

  <%= link_to 'Back to Categories', admin_categories_path %>
  <br>
  <%= link_to 'Back to All Products', admin_root_path %>

</div>
