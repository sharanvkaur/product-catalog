<%= render 'admin/main/header' %>

<div class="col-md-12">
<%= link_to 'new product', new_admin_product_path, class:"btn btn-info" %>
</div>
<% @products.each do |product| %>
<div class="col-md-8" style="padding: 10px 20px">
  <h1>
    <%= product.name %>
      <small>
        <%= product.price %>
      </small>
  </h1>
  <p>
    <%= product.description %>
  </p>


</div>

<div class="col-md-4" style="padding: 20px 20px">
  <h1>
  <%= link_to 'show', admin_product_path(product), class:"btn btn-default" %>
  <%= link_to 'edit', edit_admin_product_path(product), class:"btn btn-warning" %>
  <%= link_to 'delete', admin_product_path(product), method: :delete, class:"btn btn-danger" %>

  </h1>
</div>

<% end %>
